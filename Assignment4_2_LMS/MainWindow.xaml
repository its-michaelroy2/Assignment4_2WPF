<Window x:Class="Assignment4_2_LMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4_2_LMS"
        mc:Ignorable="d"
        Title="LMS Login" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Learning Management System" FontSize="25" Margin="0,0,0,20"/>
            <TextBlock Text="User ID:"/>
            <TextBox x:Name="txtUserId" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,0,0,10"/>
            <Button x:Name="btnLogin" Content="Login" Width="100" Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
